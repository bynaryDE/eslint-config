{
    "root": true,
    "ignorePatterns": [
        "!**/*"
    ],
    "plugins": [
        "@nx"
    ],
    "extends": [
        "@bynary/eslint-config"
    ],
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "extends": [
                "plugin:@nx/typescript"
            ],
            "rules": {
                "quote-props": [
                    "error",
                    "as-needed"
                ]
            }
        },
        {
            "files": [
                "*.js",
                "*.jsx"
            ],
            "extends": [
                "plugin:@nx/javascript"
            ],
            "rules": {}
        },
        {
            "files": [
                "*.json"
            ],
            "parser": "jsonc-eslint-parser",
            "rules": {
                "@nx/dependency-checks": [
                    "error",
                    {
                        "ignoredFiles": [
                            "{projectRoot}/vite.config.{js,ts,mjs,mts}"
                        ]
                    }
                ]
            }
        }
    ]
}
